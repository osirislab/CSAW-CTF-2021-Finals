
{{> header }}

<h1>Integration API (beta)</h1>

<p class="lead">Configure access to account data via integration API</p>

{{> show_flash_messages }}

<div class="row main-row_header">
  <p class="col-md-12">Description</p>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-1">
    <p>DownTime supports sharing <strong>{{ company.name }}'s</strong> data to other software via REST API.</p>
    <p>This page allows you to {{# if company.integration_api_enabled }}disable{{else}}enable{{/if}} access.</p>
  </div>
</div>

<div class="row main-row_header">
  <p class="col-md-12">Configuration</p>
</div>

<div class="row">
  <div class="col-md-12">
    <form class="form-horizontal" action="" method="post">
      <div class="form-group">
        <div class="col-md-9 col-md-offset-3">
        <label for="integration_api_enabled" class="control-label">
          <input
            id="integration_api_enabled"
            type="checkbox"
            {{# if company.integration_api_enabled }} checked="checked" {{/if}}
            name="integration_api_enabled"
           />&nbsp;
           Enable integration API
          </label>
        </div>
      </div>
      <hr/>
      <div class="form-group">
        <label for="token" class="col-md-3 control-label">API access key</label>
        <div class="col-md-5">
          <input class="form-control" readonly value="{{company.integration_api_token}}" aria-describedby="token_help" type="text" id="token-value">
        </div>
        <span id="token_help" class="help-block">Token that allows access to {{company.name}}'s data. <span class="danger">Keep it secret.</span></span>
      </div>
      <div class="form-group">
        <div class="col-md-offset-3 col-md-5">
          <div class="pull-right">
            <button type="submit" class="btn btn-default" id="regenerate_token_btn" name="regenerate_token" value=1>Regenerate token</button>
            <button type="submit" class="btn btn-success" id="save_settings_btn">Save integration API configuration</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

{{> footer }}
